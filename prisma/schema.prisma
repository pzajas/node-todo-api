generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  email    String @unique
  password String

  todos  Todo[]
  tokens Token[]
}

model Token {
  id     Int    @id @default(autoincrement())
  token  String @unique
  type   Type
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId Int
}

model Todo {
  id        Int     @id @default(autoincrement())
  value     String
  completed Boolean @default(false)

  user   User @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId Int
}

enum Type {
  REFRESH_TOKEN
}
